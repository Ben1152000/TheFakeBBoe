<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @conversation.name %> <br/>

  <strong> Users (<%= @users.count %>): </strong>
  <ul>
  <% @users.each do |user| %>
      
        <li><%= user.username %></li>
        
    <% end %>
  </ul>
  <br/>

  <%= form_tag :action => 'addUser' do %>
    <%= text_area :addUserForm, :username %>
    <%= submit_tag "Add User" %>
  <% end %>
  <br/>
  <%= form_tag :action => 'createUser' do %>
    <%= submit_tag "Create User debug" %>
  <% end %>
  <br/>

  <strong> Messages (<%= @messages.count %>): </strong>
  <ul>
    <% @messages.each do |message| %>
        <li><%= message.user_id %>:<%= message.content %></li>
    <% end %>
  </ul>
  <%= form_tag :action => 'writeMessage' do %>
    <%= text_area :inputMessage, :username %>
    <%= text_area :inputMessage, :msg %>
    <%= submit_tag "Send" %>
  <% end %>
</p>

<%= link_to 'Edit', edit_conversation_path(@conversation) %> |
<%= link_to 'Back', conversations_path %>
